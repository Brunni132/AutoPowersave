<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable service (automatically re-enabled at each launch)"
        android:id="@+id/chk_enable_service"
        android:checked="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

	<TextView
		android:text="Use this to test if the power saving mode can be enabled for your device."
        android:layout_marginTop="10dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
        android:layout_below="@+id/chk_enable_service"
        android:id="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enable powersave"
        android:id="@+id/btn_enable_ps"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disable powersave"
        android:id="@+id/btn_disable_ps"
        android:layout_below="@+id/btn_enable_ps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:text="The first time, you will be asked for root permissions."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/btn_disable_ps"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
